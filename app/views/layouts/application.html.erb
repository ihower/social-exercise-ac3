<!DOCTYPE html>
<html>
<head>
  <title>PhotoSharing</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= flash[:notice] %>
<%= flash[:alert] %>

<% if current_user %>
  Hi, <%= current_user.name %>
  <%= link_to "Logout", auth_signout_path, :method => :delete %>
<% else %>
  <%= link_to "Facebook 登入", "/auth/facebook" %>
<% end %>

<%= yield %>

</body>
</html>
